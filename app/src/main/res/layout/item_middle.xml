<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/dp10"
    >
    <CheckBox
        android:id="@+id/cb_middle"
        style="@style/item_checkbox"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:text=""
        android:padding="@dimen/dp15"
         />

    <ImageView
        android:id="@+id/iv_indexPhoto"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/erropic"
        android:layout_marginLeft="45dp"
     />
    <TextView
        android:id="@+id/tv_indexName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商品名字"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/iv_indexPhoto"
        android:layout_marginLeft="@dimen/dp5"
        android:paddingRight="@dimen/dp10"
        android:maxLines="2"
        android:ellipsize="end"
       />


    <TextView
        android:id="@+id/tv_indexPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.5元/箱"
        android:textColor="@color/red"
        android:layout_toRightOf="@+id/iv_indexPhoto"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp5"
        />




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/iv_indexPhoto"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical">
       <Button
           android:id="@+id/ib_desc"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:text="-"
           android:background="#f0f0f0"/>
        <TextView
            android:id="@+id/et_middle"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="1"
            android:gravity="center"
            android:textSize="10sp"
            android:paddingTop="6dp"
            android:background="#f0f0f0"
            android:layout_marginLeft="5dp"
            />
        <Button
            android:id="@+id/ib_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="+"
            android:background="#f0f0f0"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

</RelativeLayout>
