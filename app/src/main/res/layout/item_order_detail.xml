<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/iv_orderPhoto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/erropic"
            android:layout_centerVertical="true"
          />

        <TextView
            android:id="@+id/tv_productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/iv_orderPhoto"
            android:text="商品名字"
            android:layout_marginLeft="10dp"
            android:paddingRight="@dimen/dp10"
            android:textColor="@color/black"
            android:maxLines="2"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_orderPhoto"
            android:layout_centerVertical="true"
            android:text="商品名字"
            android:layout_marginLeft="10dp"
            android:textColor="@color/orange"
            />

        <TextView
            android:id="@+id/tv_productNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量:1箱"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/tv_ckfhqk"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iv_orderPhoto"
            android:text="查看发货情况"
            android:layout_marginRight="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:textColor="@color/white"
            android:background="@drawable/shape_btn_add_shop"
            android:gravity="center"
            android:textSize="@dimen/sizeText12"
            android:layout_marginBottom="@dimen/dp15"
            android:layout_marginLeft="10dp"
            />


    </RelativeLayout>


</LinearLayout>
